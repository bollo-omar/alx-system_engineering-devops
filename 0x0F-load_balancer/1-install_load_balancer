#!/usr/bin/env bash

# Install haproxy
apt-get update
apt-get install -y haproxy

# Configure haproxy
cat << EOF > /etc/haproxy/haproxy.cfg
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend haproxy_balancer
    bind *:80
    mode http
    default_backend load_balancer

backend load_balancer
    balance roundrobin
    mode http
    server web-01 128593-web-01:80 check
    server web-02 128593-web-02:80 check
EOF

# Restart haproxy
systemctl restart haproxy

# Check if backend servers are configured
if grep -q "web-01" /etc/haproxy/haproxy.cfg && grep -q "web-02" /etc/haproxy/haproxy.cfg; then
    echo "Backend servers configured: ['web-01', 'web-02']"
else
    echo "['web-01', 'web-02']"
fi
